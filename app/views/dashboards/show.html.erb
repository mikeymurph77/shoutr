<div>
<p>Welcome <%= link_to current_user.user_name, current_user %>!</p>
		<%= link_to "Followers", :followers %>
		<%= link_to "Who I'm Following", :following %>
</div>

<br>

<p><strong>Create a Text Shout!</strong></p>
<%= form_for @text_subject do |form| %>
  <%= form.text_area :body, placeholder: "Compose new Shout..." %>
  <%= form.submit "Shout" %>
<% end %>

<p><strong>Upload an Image Shout!</strong></p>
<%= form_for @image_subject do |form| %>
  <%= form.url_field :url, placeholder: "Paste link address here..." %>
  <%= form.submit "Shout" %>
<% end %>

<%= render @timeline %>
<%= paginate @timeline %>